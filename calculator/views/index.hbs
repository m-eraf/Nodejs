<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>           
</head>
<body>

    <div id="calc">
        <img src="public/images/image.gif" alt="ResConnect Logo"/>
        <form>           
                <label for="num1">num1:</label><br>
                <input class="num1" type="number" id="num1" name="num1" value=><br>
                <label for="num2">num2:</label><br>
                <input class="num2" type="number" id="num2" name="num2" value=><br><br>
                <button  class="add">+</button>
                <button  class="sub">-</button>
                <button  class="mul">x</button>
                <button type="reset">C</button><br>
                <br>
        </form>
    </div>
    <div id="cal">

        <table border="1" 
           align="right" > 
           <thead>
               <tr>
                 <th>Num1</th>
                <th>Num2</th>
                <th>Oper.</th>
                <th>Sol.</th>
            </tr> 
           </thead>
              
            <tr>
                <td class="a"></td>
                <td class="b"></td>
                <td class="o"></td>
                <td class="s"></td>
            </tr>
        </table>
    </div>

    <script>
       
        $(document).ready(() => {
            $(".add").click(function (event) {
                event.preventDefault()
                var a = $(".num1").val()
                var b = $(".num2").val()
                $.post({ url: "/add", data: { c: $(".num1").val(), d: $(".num2").val() } }).then((data) => {
                    console.log(data);
                    $("#ans").append('<p>' + "ANSWER :" + data + '</p>');
                    $(".a").append('<p>' + a + '</p>');
                    $(".b").append('<p>' + b + '</p>');
                    $(".s").append('<p>' + data + '</p>');
                    $(".o").append('<p>+<p>');
                });
            });
        })
        $(document).ready(() => {
            $(".sub").click(function (event) {
                event.preventDefault()
                var a = $(".num1").val()
                var b = $(".num2").val()
                $.post({ url: "/sub", data: { c: $(".num1").val(), d: $(".num2").val() } }).then((data) => {
                    console.log(data);
                    $("#ans").append('<p>' + "ANSWER :" + data + '</p>');
                    $(".a").append('<p>' + a + '</p>');
                    $(".b").append('<p>' + b + '</p>');
                    $(".s").append('<p>' + data + '</p>');
                    $(".o").append('<p>+<p>');
                });
            });
        })
        $(document).ready(() => {
            $(".mul").click(function (event) {
                event.preventDefault()
                var a = $(".num1").val()
                var b = $(".num2").val()
                $.post({ url: "/multi", data: { c: $(".num1").val(), d: $(".num2").val() } }).then((data) => {
                    console.log(data);
                    $("#ans").append('<p>' + "ANSWER :" + data + '</p>');
                    $(".a").append('<p>' + a + '</p>');
                    $(".b").append('<p>' + b + '</p>');
                    $(".s").append('<p>' + data + '</p>');
                    $(".o").append('<p>+<p>');
                });
            });
        })
    </script>
</body>

</html>