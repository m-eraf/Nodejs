</body>
<script>
$(".btn-add").click((event)=>{
    console.log($("form."+event.target.id).serializeArray())
    console.log($(event.target).closest('form').serializeArray())
    $.post('/name/name', $("form."+event.target.id).serializeArray()).then((data)=>{
       if(data.code ==1){
           location.reload();
           }else{
           alert("Nitya is dancing")
       }
    })
    console.log(event.target.id)
})
$(".btn-sub").click((event)=>{
    {{!-- alert("Do you want to delete this") --}}
