    </form>
    <table>
        <tr>
            <td>ID</td>
            <td>add</td>
            <td>sub</td>
            <td>multi</td>
            <td></td>
        </tr>
        {{#data}}

        <tr>
            <form  class="{{id}}">
                <td><input type="text" name="id" value="{{id}}"> </td>
                <td><input type="text" name="name" value="{{name}}"> </td>
                <td><input type="button" class="btn-add" id="{{id}}" placeholder="Update">add</input> </td>
                <td><input type="button" class="btn-sub" id="{{id}}" placeholder="Update">sub</input> </td>
				
                <td><input type="submit"> </td>
            </form>
        </tr>

        {{/data}}
